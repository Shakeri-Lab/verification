{
    "compilerOptions": {
      "jsx": "react-jsx",
      "jsxImportSource": "react", // <<< This line is present
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"], // This is good
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["vite/client", "node"] // <<< This line is present and includes "node"
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }