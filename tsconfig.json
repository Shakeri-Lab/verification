{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Essential for Promise, Object.entries, JSX.Element etc.
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // Or "node" - "bundler" is good with Vite
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,               // Vite handles emitting files
    "jsx": "react-jsx",           // CRUCIAL for JSX support
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src"], // Make sure "src/App.tsx" is covered by this
  "references": [{ "path": "./tsconfig.node.json" }]
}
